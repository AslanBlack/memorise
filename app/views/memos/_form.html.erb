
    <div class="row" align="center" id="memo_form">
        <div class="col-md-8">
          <%= form_for(@memo, :html => {class:"form-inline", role: "form"}) do |f| %>
        
          <div class= "form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control", placeholder: "Enter memo title", autofocus: true %>
          </div>
          
          <div class= "form-group">
              <%= f.label :url %>
              <%= f.text_field :url, class:"form-control", placeholder:"Enter URL" %>
          </div>
          
          <div class="form-group">
              <%= f.submit class: 'btn btn-primary btn-sm' %>
          </div>
    
        <% end %>
      </div>
    </div>
